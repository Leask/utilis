{
    "name": "utilitas",
    "description": "Just another common utility for JavaScript.",
    "version": "1990.1.45",
    "private": false,
    "homepage": "https://github.com/Leask/utilitas",
    "main": "index.mjs",
    "type": "module",
    "engines": {
        "node": ">=18.x"
    },
    "scripts": {
        "start": "node index.mjs",
        "debug": "node --inspect --trace-warnings debug.mjs",
        "test": "node --inspect --trace-warnings test.mjs",
        "updep": "npx ncu -u && npm install && wget https://raw.githubusercontent.com/Marak/colors.js/master/lib/styles.js -O ./lib/style.cjs",
        "gitsync": "( git commit -am \"Released @ `date`\" || true ) && git pull && git push",
        "pack": "./node_modules/.bin/webpack-cli --config webpack.config.mjs",
        "build": "npm run updep && ( git commit -am 'update dependencies' || true ) && node build.mjs && npm run pack",
        "pub": "npm run build && npm run gitsync",
        "beta": "npm publish --tag beta"
    },
    "author": "Leask Wong <i@leaskh.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Leask/utilitas.git"
    },
    "dependencies": {
        "@sentry/node": "^7.10.0",
        "base64url": "^3.0.1",
        "buffer": "^6.0.3",
        "fast-geoip": "^1.1.88",
        "file-type": "^17.1.6",
        "form-data": "^4.0.0",
        "ini": "github:Leask/ini",
        "ioredis": "^5.2.2",
        "jsonwebtoken": "^8.5.1",
        "mailgun.js": "^8.0.0",
        "mathjs": "^11.0.1",
        "mysql2": "^2.3.3",
        "node-mailjet": "^5.1.1",
        "nopt": "^6.0.0",
        "ping": "^0.4.2",
        "qrcode": "^1.5.1",
        "tail": "^2.2.4",
        "telegraf": "^4.8.6",
        "telesignsdk": "^2.2.1",
        "twilio": "^3.80.1",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "browserify-fs": "^1.0.0",
        "node-polyfill-webpack-plugin": "^2.0.1",
        "webpack-cli": "^4.10.0"
    }
}
